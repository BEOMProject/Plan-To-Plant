<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previousMonth"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="80dp"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toStartOf="@+id/monthYearText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_left_circle" />

            <TextView
                android:id="@+id/monthYearText"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/suit_semibold"
                android:gravity="center"
                android:text="2023 4월"
                android:textAlignment="center"
                android:textColor="@color/green5"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="189dp"
                tools:layout_editor_absoluteY="12dp" />

            <ImageButton
                android:id="@+id/nextMonth"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/monthYearText"
                app:srcCompat="@drawable/ic_arrow_right_circle"
                tools:layout_editor_absoluteY="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Mon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/suit_bold"
                android:text="월"
                android:textAlignment="center"
                android:textColor="@color/green4"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="45dp" />

            <TextView
                android:id="@+id/Tue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/suit_bold"
                android:text="화"
                android:textAlignment="center"
                android:textColor="@color/green4"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="49dp" />

            <TextView
                android:id="@+id/Wed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/suit_bold"
                android:text="수"
                android:textAlignment="center"
                android:textColor="@color/green4"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="42dp" />

            <TextView
                android:id="@+id/Thu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/suit_bold"
                android:text="목"
                android:textAlignment="center"
                android:textColor="@color/green4"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="44dp" />

            <TextView
                android:id="@+id/Fri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/suit_bold"
                android:text="금"
                android:textAlignment="center"
                android:textColor="@color/green4"
                tools:layout_editor_absoluteX="245dp"
                tools:layout_editor_absoluteY="45dp" />

            <TextView
                android:id="@+id/Sat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/suit_bold"
                android:text="토"
                android:textAlignment="center"
                android:textColor="@color/green4"
                tools:layout_editor_absoluteX="316dp"
                tools:layout_editor_absoluteY="56dp" />

            <TextView
                android:id="@+id/Sun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/suit_bold"
                android:text="일"
                android:textAlignment="center"
                android:textColor="@color/green4"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="87dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="629dp"
            android:fontFamily="@font/suit_semibold" />
    </LinearLayout>
</layout>
